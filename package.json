{
  "name": "interviewmate",
  "version": "1.0.0",
  "description": "AI-powered interview practice platform",
  "main": "server/server.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm run dev",
    "build": "npm run client:build && npm run server:build",
    "client:build": "cd client && npm run build",
    "server:build": "cd server && npm install --production",
    "start": "cd server && npm start",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "test": "cd server && npm test",
    "lint": "cd client && npm run lint",
    "deploy:staging": "npm run build && npm run deploy:server:staging",
    "deploy:production": "npm run build && npm run deploy:server:production",
    "deploy:server:staging": "cd server && NODE_ENV=staging npm start",
    "deploy:server:production": "cd server && NODE_ENV=production npm start",
    "setup:admin": "cd server && node scripts/setupAdmin.js",
    "backup:db": "cd server && node scripts/backupDatabase.js",
    "migrate:db": "cd server && node scripts/migrateDatabase.js",
    "health:check": "curl -f http://localhost:5001/api/health || exit 1",
    "validate": "node scripts/validate-setup.js",
    "test:setup": "node scripts/test-setup.js",
    "dev:safe": "concurrently \"cd server && npm run dev:safe\" \"cd client && npm run dev\""
  },
  "keywords": [
    "interview",
    "ai",
    "practice",
    "career",
    "job",
    "preparation"
  ],
  "author": "InterviewMate Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/interviewmate.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/interviewmate/issues"
  },
  "homepage": "https://interviewmate.com"
}