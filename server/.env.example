# =========================================== 
# INTERVIEWMATE SERVER ENVIRONMENT VARIABLES 
# ===========================================  

# Database Configuration 
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/interviewmate?retryWrites=true&w=majority

# JWT Authentication 
JWT_SECRET=your_super_secure_jwt_secret_key_minimum_32_characters_long
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d  

# Google Gemini Configuration 
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash 
GEMINI_FALLBACK_MODEL=gemini-1.5-flash 
GEMINI_MAX_TOKENS=2000 
GEMINI_TEMPERATURE=0.7  

# Gemini Rate Limiting (Conservative settings for free tier) 
GEMINI_REQUESTS_PER_MINUTE=10 
GEMINI_REQUESTS_PER_DAY=100 
GEMINI_MIN_REQUEST_INTERVAL=6000 
GEMINI_CACHE_DURATION=1800000  

# Vapi AI Configuration 
VAPI_PRIVATE_API_KEY=your_vapi_private_key_here
VAPI_PUBLIC_API_KEY=your_vapi_public_key_here
VAPI_WEBHOOK_SECRET=your_webhook_secret_here
VAPI_WEBHOOK_URL=http://localhost:5001/api/interview/vapi-webhook 
VAPI_ENVIRONMENT=development 
VAPI_DEFAULT_MAX_DURATION=1800 
VAPI_DEFAULT_SILENCE_TIMEOUT=25  

# Shared Assistant IDs - Only 2 assistants for all users 
VAPI_HR_ASSISTANT_ID=your_hr_assistant_id_here
VAPI_TECHNICAL_ASSISTANT_ID=your_technical_assistant_id_here

# Interviewer Names - Customize your AI interviewers 
INTERVIEWER_HR_NAME=Sarah
INTERVIEWER_TECHNICAL_NAME=Alex

# Razorpay Payment Gateway (Optional - Leave empty to disable payments)
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret_here

# Email Configuration (for password reset, notifications) 
EMAIL_HOST=smtp.gmail.com 
EMAIL_PORT=587 
EMAIL_SECURE=false 
EMAIL_USER=your_email@gmail.com 
EMAIL_PASS=your_app_specific_password 
EMAIL_FROM=InterviewMate <noreply@interviewmate.com>  

# File Upload Configuration 
MAX_FILE_SIZE=10485760 
ALLOWED_FILE_TYPES=pdf,doc,docx,txt 
UPLOAD_PATH=uploads/  

# Rate Limiting 
RATE_LIMIT_WINDOW_MS=900000 
RATE_LIMIT_MAX_REQUESTS=100  

# CORS Configuration 
CLIENT_URL=http://localhost:5173 
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000  

# Server Configuration 
PORT=5001
HOST=localhost 
NODE_ENV=development  

# Session Configuration 
SESSION_SECRET=your_session_secret_key_here
SESSION_EXPIRE=86400000  

# OAuth Configuration (Server-side secrets) 
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# OAuth Redirect URLs 
GOOGLE_REDIRECT_URI=http://localhost:5173/auth/google/callback 
GITHUB_REDIRECT_URI=http://localhost:5173/auth/github/callback  

# Feature Flags 
ENABLE_GOOGLE_OAUTH=true 
ENABLE_GITHUB_OAUTH=true 
ENABLE_EMAIL_VERIFICATION=true 
ENABLE_TWO_FACTOR_AUTH=false  

# Analytics & Monitoring 
ANALYTICS_ENABLED=true 
SENTRY_DSN=your_sentry_dsn_here

# Backup Configuration 
BACKUP_ENABLED=false 
BACKUP_SCHEDULE=0 2 * * * 
BACKUP_RETENTION_DAYS=30